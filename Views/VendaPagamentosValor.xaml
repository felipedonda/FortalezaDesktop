<Window x:Class="FortalezaDesktop.Views.VendaPagamentosValor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FortalezaDesktop.Views"
        mc:Ignorable="d"
        Title="Pagamento - " Height="450" Width="342"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="textblockTipoPagamento" Text="Tipo de pagamento" TextAlignment="Center" Margin="10" FontSize="20" Grid.Row="0" />
        <local:PadNumerico x:Name="PadNumerico" Grid.Row="1" />
    </Grid>
</Window>
