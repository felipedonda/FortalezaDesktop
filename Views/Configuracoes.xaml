<Window x:Class="FortalezaDesktop.Views.Configuracoes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FortalezaDesktop.Views"
        mc:Ignorable="d"
        Title="Configuracoes" Height="450" Width="600"
        Loaded="OnLoad">
    <Grid>
        <TabControl>
            <TabItem Header="Geral">
                <Grid Background="White">
                    <StackPanel Orientation="Vertical" Margin="10">
                        <CheckBox Content="Mostrar botão &quot;Todos&quot;" Margin="0,0,0,3" FontSize="12" x:Name="checkboxGrupoTodos"  Click="checkboxGrupoTodos_Checked" />
                        <CheckBox Content="Não exibir produtos na tela de venda (modo caixa)." Margin="0,0,0,3" FontSize="12" x:Name="checkboxModoCaixa" Click="checkboxModoCaixa_Checked" />
                        <CheckBox Content="Concluir venda automaticamente após o pagamento." Margin="0,0,0,3" FontSize="12" x:Name="checkboxVendaPagamento" Click="checkboxVendaPagamento_Checked" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
